<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    tools:context="com.example.silviu.proiectcloud.LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="210dp"
                android:layout_height="210dp"
                app:srcCompat="@drawable/cloud_computing_logo"
                android:id="@+id/imageView4" />

            <TextView
                android:text="Proiect Cloud Computing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="#3881ed"
                android:textStyle="bold"
                android:visibility="gone"
                android:id="@+id/textView" />

            <TextView
                android:text="using"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#8e8e8e"
                android:layout_marginTop="10dp"
                android:id="@+id/textView2" />

            <ImageView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/googleapi"
                android:layout_marginTop="30dp"
                android:id="@+id/imageView" />

            <ImageView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/weatherapi"
                android:layout_marginTop="20dp"
                android:id="@+id/imageView2" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="30dp"
            android:layout_gravity="bottom">

            <Button
                android:text="CONTINUARE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textSize="17dp"
                android:textColor="@color/colorGrayDarker"
                android:background="@drawable/shape9"
                android:id="@+id/buttonContinuare" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/right_arrow"
                android:id="@+id/imageView5"
                android:layout_weight="0" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
